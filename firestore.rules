// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helpers ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ---------------------------------------------------------
    // Notifications
    // ---------------------------------------------------------
    match /notifications/{notificationId} {
      allow create: if isSignedIn()
        && request.resource.data.senderId == request.auth.uid
        && request.resource.data.receiverId is string;

      allow read: if isSignedIn()
        && resource.data.receiverId == request.auth.uid;

      allow update, delete: if isSignedIn()
        && resource.data.receiverId == request.auth.uid;
    }

    // ---------------------------------------------------------
    // Conversations e Mensagens
    // ---------------------------------------------------------
    match /conversations/{conversationId} {

      allow create: if isSignedIn()
        && request.resource.data.users != null
        && request.auth.uid in request.resource.data.users;

      allow read: if isSignedIn()
        && resource.data.users != null
        && request.auth.uid in resource.data.users;

      allow update: if isSignedIn() && (
        (request.resource.data.users != null
         && request.auth.uid in request.resource.data.users) ||
        (resource.data.users != null
         && request.auth.uid in resource.data.users)
      );

      allow delete: if isSignedIn()
        && resource.data.users != null
        && request.auth.uid in resource.data.users;

      match /messages/{messageId} {
        allow create, read: if isSignedIn()
          && exists(/databases/$(database)/documents/conversations/$(conversationId))
          && request.auth.uid in
             get(/databases/$(database)/documents/conversations/$(conversationId)).data.users;

        allow update, delete: if isSignedIn()
          && resource.data.senderId == request.auth.uid;
      }
    }

    // ---------------------------------------------------------
    // Connections (minha_rede)
    // ---------------------------------------------------------
    match /connections/{connectionId} {
      allow create: if isSignedIn()
        && request.resource.data.usuarioId is string
        && (request.resource.data.profissionalId is string
            || request.resource.data.academiaId is string);

      allow read, update, delete: if isSignedIn() && (
        request.auth.uid == resource.data.usuarioId ||
        request.auth.uid == resource.data.profissionalId ||
        request.auth.uid == resource.data.academiaId
      );
    }

    // ---------------------------------------------------------
    // POSTS  (CORRIGIDO • SEM DUPLICAÇÃO • SEM authorId)
    // ---------------------------------------------------------
    match /posts/{postId} {

      // leitura pública
      allow read: if true;

      // criar post
      allow create: if request.auth != null;

      // excluir post → apenas o autor (userId)
      allow delete: if request.auth != null
        && resource.data.userId == request.auth.uid;

      // editar post
      allow update: if request.auth != null && (

        // 1) autor pode editar tudo
        resource.data.userId == request.auth.uid ||

        // 2) qualquer usuário autenticado pode curtir/descurtir/comentar
        request.resource.data.diff(resource.data)
          .changedKeys()
          .hasOnly(['likedBy', 'likes', 'comments'])
      );

      // ----------------------------
      // Comentários
      // ----------------------------
      match /comments/{commentId} {

        allow read: if true;

        allow create: if request.auth != null
          && request.resource.data.userId == request.auth.uid;

        allow delete: if request.auth != null
          && resource.data.userId == request.auth.uid;

        allow update: if request.auth != null
          && resource.data.userId == request.auth.uid;

        // Respostas (replies)
        match /replies/{replyId} {

          allow read: if true;

          allow create: if request.auth != null
            && request.resource.data.userId == request.auth.uid;

          allow delete: if request.auth != null
            && resource.data.userId == request.auth.uid;

          allow update: if request.auth != null
            && resource.data.userId == request.auth.uid;
        }
      }
    }

    // ---------------------------------------------------------
    // Perfis Academia
    // ---------------------------------------------------------
    match /academias/{academiaId} {
      allow read: if true;

      allow create: if isSignedIn() && academiaId == request.auth.uid;

      allow update: if isOwner(academiaId) || (
        isSignedIn() &&
        request.resource.data.diff(resource.data)
          .affectedKeys()
          .hasOnly(['rating', 'avaliacao'])
      );

      allow delete: if isOwner(academiaId);
    }

    // ---------------------------------------------------------
    // Perfis Profissionais
    // ---------------------------------------------------------
    match /professionals/{profissionalId} {
      allow read: if true;

      allow create: if isSignedIn() && profissionalId == request.auth.uid;

      allow update: if isOwner(profissionalId) || (
        isSignedIn() &&
        request.resource.data.diff(resource.data)
          .affectedKeys()
          .hasOnly(['rating', 'avaliacao'])
      );

      allow delete: if isOwner(profissionalId);
    }

    // ---------------------------------------------------------
    // Users
    // ---------------------------------------------------------
    match /users/{userId} {
      allow read: if true;

      allow create: if isSignedIn() && userId == request.auth.uid;

      allow update, delete: if isOwner(userId);
    }

    // ---------------------------------------------------------
    // Treinos
    // ---------------------------------------------------------
    match /treinos/{treinoId} {

      allow create: if isSignedIn();

      allow read: if isSignedIn();

      allow update, delete: if isSignedIn()
        && resource.data.profissionalId == request.auth.uid;
    }

    // ---------------------------------------------------------
    // Treinos Atribuídos
    // ---------------------------------------------------------
    match /treinos_atribuidos/{atribuicaoId} {

      allow create: if isSignedIn();

      allow read: if isSignedIn() && (
        resource.data.profissionalId == request.auth.uid ||
        resource.data.clienteId == request.auth.uid
      );

      allow list: if isSignedIn();

      allow update: if isSignedIn()
        && resource.data.profissionalId == request.auth.uid;

      allow delete: if isSignedIn()
        && resource.data.profissionalId == request.auth.uid;
    }

    // ---------------------------------------------------------
    // Planos Nutricionais
    // ---------------------------------------------------------
    match /nutrition_plans/{planId} {

      allow create: if isSignedIn();

      allow read: if isSignedIn() && (
        resource.data.createdBy == request.auth.uid ||
        resource.data.studentUid == request.auth.uid
      );

      allow update: if isSignedIn()
        && resource.data.createdBy == request.auth.uid;

      allow delete: if isSignedIn()
        && resource.data.createdBy == request.auth.uid;
    }

    // ---------------------------------------------------------
    // Ratings
    // ---------------------------------------------------------
    match /ratings/{ratingId} {
      allow read: if true;

      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.targetId is string
        && request.resource.data.targetType is string
        && (request.resource.data.rating is int || request.resource.data.rating is float)
        && request.resource.data.rating >= 0.0
        && request.resource.data.rating <= 5.0;

      allow update: if isSignedIn()
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == request.auth.uid
        && (request.resource.data.rating is int || request.resource.data.rating is float)
        && request.resource.data.rating >= 0.0
        && request.resource.data.rating <= 5.0;

      allow delete: if isSignedIn()
        && resource.data.userId == request.auth.uid;
    }

    // ---------------------------------------------------------
    // Default deny
    // ---------------------------------------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
