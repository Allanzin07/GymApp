// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helpers ---
    function isSignedIn() {
      return request.auth != null;
    }

    // isOwner: compara request.auth.uid com o id passado (sem tipos na assinatura)
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ---------------------------------------------------------
    // Notifications
    // Recomendo padrão: cada notificação tem `receiverId` (destinatário)
    // e `senderId` (quem criou). Ajuste o cliente para usar esses campos.
    // ---------------------------------------------------------
    match /notifications/{notificationId} {
      // Criação: permitimos que o remetente crie notifications para outro (senderId == auth.uid)
      allow create: if isSignedIn()
        && request.resource.data.senderId == request.auth.uid
        // receiverId deve existir e ser string
        && request.resource.data.receiverId is string;

      // Ler: somente quem é destinatário (receiverId) pode ler suas notificações
      allow read: if isSignedIn() && resource.data.receiverId == request.auth.uid;

      // Atualizar / deletar: somente destinatário (ou você pode permitir sender em casos específicos)
      allow update, delete: if isSignedIn() && resource.data.receiverId == request.auth.uid;
    }

    // ---------------------------------------------------------
    // Conversations e mensagens
    // Razoável: somente participantes podem ler/escrever.
    // Assume que conversation doc tem campo `users`: lista com dois UIDs.
    // ---------------------------------------------------------
    match /conversations/{conversationId} {
      // criação: o usuário deve estar na lista users do documento enviado
      allow create: if isSignedIn()
        && request.resource.data.users != null
        && request.auth.uid in request.resource.data.users;

      // leitura: somente participantes (verifica no documento existente)
      allow read: if isSignedIn()
        && resource.data.users != null
        && request.auth.uid in resource.data.users;

      // atualização: permite se o usuário está na lista users do request OU do documento existente
      // Isso permite merge de conversas existentes e criação via merge
      allow update: if isSignedIn() && (
        (request.resource.data.users != null && request.auth.uid in request.resource.data.users) ||
        (resource.data.users != null && request.auth.uid in resource.data.users)
      );

      // exclusão: somente participantes
      allow delete: if isSignedIn()
        && resource.data.users != null
        && request.auth.uid in resource.data.users;

      match /messages/{messageId} {
        allow create, read: if isSignedIn()
          && exists(/databases/$(database)/documents/conversations/$(conversationId))
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.users;

        allow update, delete: if isSignedIn()
          && resource.data.senderId == request.auth.uid;
      }
    }

    // ---------------------------------------------------------
    // Connections (minha_rede)
    // Permitir leitura/escrita somente se o usuário for um dos envolvidos na conexão.
    // Supõe que cada documento tem campos: usuarioId, profissionalId, academiaId.
    // ---------------------------------------------------------
    match /connections/{connectionId} {
      allow create: if isSignedIn()
        && request.resource.data.usuarioId is string
        && (request.resource.data.profissionalId is string || request.resource.data.academiaId is string);
      allow read, update, delete: if isSignedIn() && (
        request.auth.uid == resource.data.usuarioId ||
        request.auth.uid == resource.data.profissionalId ||
        request.auth.uid == resource.data.academiaId
      );
    }

    // Posts: leitura pública, escrita apenas autenticado
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      // update/delete somente autor (assumindo campo authorId)
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }

    // Perfis
    match /academias/{academiaId} {
      allow read: if true;
      // Permite criar se o ID do documento for igual ao UID autenticado
      allow create: if isSignedIn() && academiaId == request.auth.uid;
      // Permite atualizar/deletar se for o dono
      allow update, delete: if isOwner(academiaId);
    }

    match /professionals/{profissionalId} {
      allow read: if true;
      // Permite criar se o ID do documento for igual ao UID autenticado
      allow create: if isSignedIn() && profissionalId == request.auth.uid;
      // Permite atualizar/deletar se for o dono
      allow update, delete: if isOwner(profissionalId);
    }

    match /users/{userId} {
      // Permite leitura pública para verificar emails durante registro
      // e leitura autenticada para outros casos
      allow read: if true;
      // Permite criar se o ID do documento for igual ao UID autenticado
      allow create: if isSignedIn() && userId == request.auth.uid;
      // Permite atualizar/deletar se for o dono
      allow update, delete: if isOwner(userId);
    }

    // ---------------------------------------------------------
    // Treinos (workouts)
    // Permite que profissionais criem seus próprios treinos
    // Permite leitura para usuários autenticados (para ver treinos atribuídos)
    // Nota: Profissionais também estão na coleção users com userType: 'profissional'
    // ---------------------------------------------------------
    match /treinos/{treinoId} {
      // Criação: qualquer usuário autenticado pode criar treinos
      allow create: if isSignedIn();
      
      // Leitura: qualquer usuário autenticado pode ler (acesso controlado via treinos_atribuidos)
      allow read: if isSignedIn();
      
      // Atualização/Exclusão: apenas o profissional que criou o treino
      allow update, delete: if isSignedIn()
        && resource.data.profissionalId == request.auth.uid;
    }

    // ---------------------------------------------------------
    // Treinos Atribuídos (workout assignments)
    // Estrutura: workoutId, clienteId, profissionalId, atribuidoEm, status
    // Nota: Profissionais também estão na coleção users com userType: 'profissional'
    // e o uid deles é o mesmo que o profissionalId
    // ---------------------------------------------------------
    match /treinos_atribuidos/{atribuicaoId} {
      // Criação: qualquer usuário autenticado pode criar atribuições
      // Simplificado para permitir qualquer criação autenticada
      allow create: if isSignedIn();
      
      // Leitura: 
      // - Profissionais podem ler treinos que eles atribuíram (para verificar duplicatas)
      // - Clientes podem ler treinos atribuídos a eles
      // Permite leitura se o usuário for o profissional OU o cliente
      allow read: if isSignedIn() && (
        resource.data.profissionalId == request.auth.uid ||
        resource.data.clienteId == request.auth.uid
      );
      
      // Permite queries para verificar duplicatas antes de criar
      // Profissionais podem fazer queries onde workoutId e clienteId são especificados
      allow list: if isSignedIn();
      
      // Atualização: apenas o profissional que atribuiu pode atualizar
      // (ex: mudar status)
      allow update: if isSignedIn()
        && resource.data.profissionalId == request.auth.uid;
      
      // Exclusão: apenas o profissional que atribuiu pode deletar
      allow delete: if isSignedIn()
        && resource.data.profissionalId == request.auth.uid;
    }

    // ---------------------------------------------------------
    // Planos Nutricionais (nutrition plans)
    // Estrutura: createdBy, studentUid, title, objective, observations, days, status
    // ---------------------------------------------------------
    match /nutrition_plans/{planId} {
      // Criação: qualquer usuário autenticado pode criar planos
      allow create: if isSignedIn();
      
      // Leitura: 
      // - Nutricionistas podem ler planos que criaram
      // - Alunos podem ler planos atribuídos a eles
      allow read: if isSignedIn() && (
        resource.data.createdBy == request.auth.uid ||
        resource.data.studentUid == request.auth.uid
      );
      
      // Atualização: apenas o nutricionista que criou pode atualizar
      allow update: if isSignedIn()
        && resource.data.createdBy == request.auth.uid;
      
      // Exclusão: apenas o nutricionista que criou pode deletar
      allow delete: if isSignedIn()
        && resource.data.createdBy == request.auth.uid;
    }

    // Demais caminhos negados por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
